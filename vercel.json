{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/app.py" }
  ],
  "crons":
  [
    {
      "path": "/Cron/Update",
      "schedule": "0 * 1 1 *"
    }
  ]
}
